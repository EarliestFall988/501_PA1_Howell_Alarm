<UserControl x:Class="_501_PA1_Howell_Alarm.AlarmActions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_501_PA1_Howell_Alarm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             Background="#333"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="AddAlarm" Grid.Column="1" Margin="20,20,20,20" BorderBrush="#00707070" Background="#FF75BF5C" Click="AddAlarm_Click">+</Button>
        <Button x:Name="RemoveAlarm" Grid.Column="0" Margin="20,20,20,20" BorderBrush="#00707070" Click="RemoveAlarm_Click">Delete</Button>
    </Grid>
</UserControl>
